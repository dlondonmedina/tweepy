<div class="column is-half">
    <article class="media box">
        <figure class="media-left">
            <p class="image is-64x64">
                <img src="https://bulma.io/images/placeholders/64x64.png" alt="Bulma Placeholder">
            </p>
        </figure>
        <div class="media-content">
            <%= render 'tweeps/form' %>
        </div>
    </article>


<% @tweeps.each do | tweep | %>
    <div class="box">
        <article class="media">
            <div class="media-left">
                <figure class="image is-64x64">
                    <img src="https://bulma.io/images/placeholders/64x64.png" alt="Bulma Placeholder">
                </figure>
            </div>
            <div class="media-content">
                <div class="content">
                    <strong>Dylan Medina</strong><br>
                    <small>@dlondonmedina</small><br>
                    <p><%= tweep.tweep %></p>
                </div>
                <nav class="level">
                    <div class="level-left is-mobile">
                        <%= link_to tweep, class: "level-item" do %>
                            <span class="icon"><i class="fa fa-link" aria-hidden="true"></i></span>     
                        <% end %>
                        <%= link_to edit_tweep_path(tweep), class: "level-item" do %>
                            <span class="icon"><i class="fa fa-pencil" aria-hidden="true"></i></span>     
                        <% end %>
                        <%= link_to tweep, method: :delete, data: { confirm: "Are you sure?" } do %>
                            <span class="icon"><i class="fa fa-trash-o" aria-hidden="true"></i></span>     
                        <% end %>
                    </div>
                </nav>
            </div>
        </article>
    </div>
<% end %>

</div>